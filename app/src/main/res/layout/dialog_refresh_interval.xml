<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dialog_refresh_interval_padding_horizontal"
        android:paddingVertical="@dimen/dialog_refresh_interval_padding_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="@string/dialog_refresh_interval_title"
            android:textColor="@color/white"
            android:textSize="@dimen/radio_button_text_size" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/radio_group_margin_vertical"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/second5Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/mainGold"
                android:text="@string/dialog_refresh_interval_second_5"
                android:textColor="@color/white"
                android:textSize="@dimen/radio_button_text_size" />

            <RadioButton
                android:id="@+id/second30Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/mainGold"
                android:text="@string/dialog_refresh_interval_second_30"
                android:textColor="@color/white"
                android:textSize="@dimen/radio_button_text_size" />

            <RadioButton
                android:id="@+id/minute1Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/mainGold"
                android:text="@string/dialog_refresh_interval_minute_1"
                android:textColor="@color/white"
                android:textSize="@dimen/radio_button_text_size" />

            <RadioButton
                android:id="@+id/minute5Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/mainGold"
                android:text="@string/dialog_refresh_interval_minute_5"
                android:textColor="@color/white"
                android:textSize="@dimen/radio_button_text_size" />

        </RadioGroup>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>